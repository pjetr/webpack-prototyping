{
    "compilerOptions": {
        "target": "ES5",
        "lib": [ "es2017", "dom" ],
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmitHelpers": false,
        "sourceMap": true,
        "noStrictGenericChecks": true,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "node_modules/*"
    ],
    "include": [
        "./src/**/*.ts",
    ],
    "compileOnSave": false,
    "buildOnSave": false
}